<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit College Profile | BCA Examiner Allotment</title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Optional Bootstrap for layout only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Private Header -->
  <%- include('../partials/header_private', { college: college }) %>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Edit College Profile</h1>
      <p>Update your college's details and contact information.</p>
    </div>
  </section>

  <!-- Edit Form -->
  <section class="features">
    <div class="feature-card" style="max-width: 600px; width: 100%;">

      <form action="/college/update/<%= college.college_id %>" method="POST">

        <div class="mb-4">
          <label class="form-label">College Code</label>
          <input type="text" class="form-control" name="college_code" value="<%= college.college_code %>" readonly>
        </div>

        <div class="mb-4">
          <label class="form-label">College Address</label>
          <textarea class="form-control" name="college_address" rows="3" required><%= college.college_address %></textarea>
        </div>

        <div class="mb-4">
          <label class="form-label">Pincode</label>
          <select class="form-control" name="college_pincode">
            <option value="">Select Pincode</option>
            <% pincodes.forEach(function(pin) { %>
              <option value="<%= pin.pincode %>" 
                <%= pin.pincode === college.college_pincode ? 'selected' : '' %>>
                <%= pin.pincode %> - <%= pin.area_name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="mb-4">
          <label class="form-label">Contact Person Name</label>
          <input type="text" class="form-control" name="college_hod" value="<%= college.college_hod %>">
        </div>

        <div class="mb-4">
          <label class="form-label">Contact Person Phone</label>
          <input type="text" class="form-control" name="hod_phone" value="<%= college.hod_phone %>">
        </div>

        <div class="text-center pdf-download mt-4">
          <button type="submit" class="btn">Save Changes</button>
        </div>

      </form>

    </div>
  </section>

  <%- include('../partials/footer') %>

</body>
</html>
