<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Login | BCA Examiner Allotment</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/features.css">
    <script src="/js/scripts.js"></script>

</head>

<body>

    <%- include('../partials/header') %>

        <% if (typeof error !=="undefined" ) { %>
            <div id="errorPopup" class="error-popup">
                <span>
                    <%= error %>
                </span>
                <button onclick="closePopup()">‚úñ</button>
            </div>
            <% } %>


                <!-- College Login Section -->
                <section class="hero">
                    <div class="hero-content">
                        <h1>College Login</h1>
                        <p>Please log in with your college credentials to manage Practical Related Data.</p>

                        <form action="/college/login" method="POST" style="margin-top: 20px;">

                            <input type="text" name="college_code" placeholder="College Code" required
                                style="width: 100%; padding: 12px; margin-bottom: 15px; border-radius: 8px; border: none; font-size: 1em;">

                            <div class="password-wrapper">
                                <input type="password" id="password" name="password" placeholder="Password" required>

                                <!-- Eye Toggle -->
                                <button type="button" id="togglePasswordBtn" onclick="togglePassword(event)"
                                    class="toggle-password-btn">
                                    üôà
                                </button>
                            </div>

                            <button type="submit" class="btn">Login</button>
                        </form>

                    </div>
                </section>

                <%- include('../partials/footer') %>

                    <!-- Password Toggle Script -->
                    <script>
                        function togglePassword(event) {
                            event.preventDefault();

                            const passwordInput = document.getElementById("password");
                            const toggleBtn = document.getElementById("togglePasswordBtn");
                            const isPasswordHidden = passwordInput.getAttribute("type") === "password";

                            passwordInput.setAttribute("type", isPasswordHidden ? "text" : "password");
                            toggleBtn.textContent = isPasswordHidden ? "üëÅÔ∏è" : "üôà";
                            //toggleBtn.setAttribute("data-tooltip", isPasswordHidden ? "Hide Password" : "View Password");
                        }
                    </script>

</body>

</html>