<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set New Password | BCA Examiner Allotment</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .password-wrapper {
            position: relative;
            width: 100%;
        }
        .password-wrapper input {
            width: 100%;
            padding: 12px 40px 12px 12px; /* space for icon */
            margin-bottom: 20px;
            border-radius: 8px;
            border: none;
            font-size: 1em;
        }
        .toggle-password-btn {
            position: absolute;
            top: 50%;
            right: 12px;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 1.5em;
            cursor: pointer;
            color: #f0a500;
        }
        /* Tooltip */
        .toggle-password-btn::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 120%;
            right: 50%;
            transform: translateX(50%);
            background-color: #333;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.8em;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }
        .toggle-password-btn:hover::after {
            opacity: 1;
        }
    </style>
</head>
<body>


    <!-- Set Password Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Set New Password</h1>
            <p>For security reasons, please set a new password for your college account.</p>

            <form id="passwordForm" action="/college/set-password" method="POST" style="margin-top: 20px;">
                
                <!-- New Password Field -->
                <div class="password-wrapper">
                    <input type="password" name="new_password" id="new_password" placeholder="Enter New Password" required>
                    <button type="button" id="toggleNewPasswordBtn" onclick="togglePassword('new_password', 'toggleNewPasswordBtn')" class="toggle-password-btn" data-tooltip="View Password">üôà</button>
                </div>

                <!-- Confirm Password Field -->
                <div class="password-wrapper">
                    <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm New Password" required>
                    <button type="button" id="toggleConfirmPasswordBtn" onclick="togglePassword('confirm_password', 'toggleConfirmPasswordBtn')" class="toggle-password-btn" data-tooltip="View Password">üôà</button>
                </div>

                <button type="submit" class="btn">Save Password</button>
                
                <p id="error_message" style="color: #ff4d4d; margin-top: 15px; display: none;">Passwords do not match. Please try again.</p>
            </form>

        </div>
    </section>


    <script>
        // Password match validation
        document.getElementById('passwordForm').addEventListener('submit', function(event) {
            const password = document.getElementById('new_password').value;
            const confirmPassword = document.getElementById('confirm_password').value;

            if (password !== confirmPassword) {
                event.preventDefault();
                document.getElementById('error_message').style.display = 'block';
            }
        });

        // Toggle password visibility
        function togglePassword(inputId, buttonId) {
            const passwordInput = document.getElementById(inputId);
            const toggleBtn = document.getElementById(buttonId);
            const isPasswordHidden = passwordInput.getAttribute("type") === "password";

            passwordInput.setAttribute("type", isPasswordHidden ? "text" : "password");
            toggleBtn.textContent = isPasswordHidden ? "üëÅÔ∏è" : "üôà";
            toggleBtn.setAttribute("data-tooltip", isPasswordHidden ? "Hide Password" : "View Password");
        }
    </script>

</body>
</html>
